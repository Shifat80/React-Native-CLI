{
  "name": "setup-rn-cli",
  "version": "1.0.1",
  "description": "A powerful CLI tool that automates the setup of React Native projects with popular packages and configurations",
  "main": "index.js",
  "bin": {
    "setup-rn": "./index.js"
  },
  "files": [
    "index.js",
    "src/",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Shifat80/React-Native-CLI.git"
  },
  "bugs": {
    "url": "https://github.com/Shifat80/React-Native-CLI/issues"
  },
  "homepage": "https://github.com/Shifat80/React-Native-CLI#readme",
  "scripts": {
    "start": "node index.js",
    "test": "node test.js",
    "test:manual": "echo 'Run: npm link && setup-rn'",
    "prepublishOnly": "npm test",
    "postinstall": "echo 'Setup React Native CLI installed successfully! Run: setup-rn'",
    "version:patch": "npm version patch && git push && git push --tags",
    "version:minor": "npm version minor && git push && git push --tags",
    "version:major": "npm version major && git push && git push --tags",
    "release": "npm run test && npm publish",
    "prepare-release": "node prepare-release.js",
    "check": "node prepare-release.js"
  },
  "keywords": [
    "react-native",
    "expo",
    "cli",
    "scaffold",
    "generator",
    "boilerplate",
    "setup",
    "mobile",
    "typescript",
    "javascript",
    "nativewind",
    "react-navigation",
    "firebase",
    "zustand",
    "react-query",
    "tailwindcss",
    "automation"
  ],
  "author": {
    "name": "Setup",
    "email": "contact@setup-rn.dev",
    "url": "https://github.com/your-username"
  },
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "execa": "^5.1.1",
    "fs-extra": "^11.1.1",
    "inquirer": "^12.9.2",
    "ora": "^5.4.1",
    "setup-rn-cli": "^1.0.0"
  }
}
